/* pages/detail/detail.wxss */
.detailContainer{
  display: flex;
  flex-direction: column;
  padding-left:20rpx;
   padding-right:20rpx;
   position: relative;
}
.headerImg{
  width: 100%;
  height: 400rpx;
}
.userInfo{
  margin-top: 20rpx;
}
.userInfo image{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.userInfo text{
  font-size: 30rpx;
  margin-left: 20rpx;
}
.title{
  font-size: 38rpx;
  font-weight: bold;
  margin-left: 40rpx;
  margin-top: 20rpx;
}
.collection-share-container{
  position: relative;
}
.collection-share{
  float: right;
  margin-right: 20rpx;
}
.collection-share-container image{
  width: 90rpx;
  height: 90rpx;
  margin-left: 20rpx;
}
.content{
  margin-top: 20rpx;
  font-size: 34rpx;
  text-indent: 38rpx;
}
.line{
  width: 90%;
  height: 1rpx;
  background: #eee;
  position: absolute;
  left: 5%;
  top:45rpx;
  z-index: -1;
}
button{
  width: 260rpx;
  font-size: 34rpx;
  line-height: 74rpx;
  margin-top: 20rpx;
  font-weight: bold;
  background: #A3E4D7;
  color: white;
  font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif;
}
.musicImg {
	width: 60rpx;
	height: 60rpx;
	position: absolute;
	top: 180rpx;
	left: 50%;
	margin-left: -30rpx;
}